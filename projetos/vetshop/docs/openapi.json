    "components": {
        "schemas": {
            "Categoria": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "produtos": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Produto"
                        }
                    }
                }
            },
            "Cliente": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "cpf": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "telefone": {
                        "type": "string"
                    }
                }
            },
            "Fornecedor": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "razao_social": {
                        "type": "string",
                        "example": "Fornecedor S.A."
                    },
                    "nome_fantasia": {
                        "type": "string",
                        "example": "Fornecedor de Produtos Veterinários"
                    },
                    "cnpj": {
                        "type": "string",
                        "example": "00.000.000/0001-00"
                    },
                    "email": {
                        "type": "string",
                        "example": "contato@fornecedor.com.br"
                    },
                    "telefone": {
                        "type": "string",
                        "example": "(11) 1234-5678"
                    }
                }
            },
            "Produto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "preco": {
                        "type": "number",
                        "format": "double"
                    }
                }
            },
            "Pedido": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "nome": {
                        "type": "string",
                        "example": "Pedido de medicamentos"
                    },
                    "cliente": {
                        "$ref": "#/components/schemas/Cliente"
                    },
                    "fornecedor": {
                        "$ref": "#/components/schemas/Fornecedor"
                    },
                    "produtos": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Produto"
                        }
                    },
                    "dataDeInclusao": {
                        "type": "string",
                        "format": "date",
                        "example": "2024-10-15"
                    },
                    "dataDeAlteracao": {
                        "type": "string",
                        "format": "date",
                        "example": "2024-10-20"
                    }
                }
            }
        }
    }
}